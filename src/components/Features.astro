---
import One from '../images/features/one.svg'
import Two from '../images/features/two.svg'
import Three from '../images/features/three.svg'


const features = [
    { 
        icon: One,
        title: 'Websites That Sell',
        desc: `Free hosting + SEO to get you online fast. Upgrade to CRO Max with funnels, VSLs, and auto-replies that turn clicks into clients.`
   },
   { 
        icon: Two,
        title: 'Socials That Grow',
        desc: `Weekly posts across IG, FB, TikTok, and LinkedIn. Standout creatives and paid ads that keep your brand in front of the right people.`
   },
   { 
        icon: Three,
        title: 'Emails That Work',
        desc: `We scrape, verify, and send outreach for you. No wasted lists, just real leads and automated follow-ups that land in inboxes.`
   }
]
---



<section id="services">
    <div class="container">
           <div class="max-w-md m-auto text-center">
             <h2 class="text-lg">Services That Do the Work for You</h2>
             <p class="text-sm">Website, Social, and Email â€” the three pillars of growth, all handled in one place. Pick one, or bundle them all for the complete SuperChill experience.</p>
           </div>
            <div class="feature-wrapper grid text-center mt-1">
                {features.map((el, index) => (
                    <div class="item">
                        <div class="img-wrap">
                            <img src={el.icon.src} alt={el.title} width="60" />
                        </div>
                        <h3 class="mt-2 text-bold">{el.title}</h3>
                        <p>{el.desc}</p>
                    </div>
                ))}
            </div>
    </div>
</section>

<style>

.feature-wrapper{
    gap: 30px;
    padding: 50px 0;
    grid-template-columns: repeat(3, 1fr);
}
.item{
    background-color: rgb(250 250 250/1);
    padding: 40px;
    border-radius: var(--radius-lg);
}
.item h3{
    font-size: 2rem;
}
.img-wrap{
    background: var(--gradient);
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
    border-radius: 50px;
}


@media (max-width: 700px) {
    .feature-wrapper{
        grid-template-columns: 100%;
    }
    
}

</style>