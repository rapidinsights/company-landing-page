---
import One from '../images/features/one.svg'
import Two from '../images/features/two.svg'
import Three from '../images/features/three.svg'


const features = [
    {
        icon: One,
        title: 'Connect Your Data',
        desc: `Pull data from spreadsheets, databases, and business tools into one organized platform. No more hunting through multiple files.`
   },
   {
        icon: Two,
        title: 'Automate Everything',
        desc: `Your data updates automatically on a schedule you set. Daily, hourly, or real-timeâ€”you decide. No manual exports or copy-pasting.`
   },
   {
        icon: Three,
        title: 'See It Clearly',
        desc: `Custom dashboards built for how you work. Get the exact reports you need, not generic templates. All your numbers in one place.`
   }
]
---



<section id="services">
    <div class="container">
           <div class="max-w-md m-auto text-center">
             <h2 class="text-lg">Everything Custom Designed to Your Business</h2>
             <p class="text-sm">We build data infrastructure that works the way you think. Connect your sources, automate the updates, and see everything in dashboards designed for your business.</p>
           </div>
            <div class="feature-wrapper grid text-center mt-1">
                {features.map((el, index) => (
                    <div class="item">
                        <div class="img-wrap">
                            <img src={el.icon.src} alt={el.title} width="60" />
                        </div>
                        <h3 class="mt-2 text-bold">{el.title}</h3>
                        <p>{el.desc}</p>
                    </div>
                ))}
            </div>
    </div>
</section>

<style>

.feature-wrapper{
    gap: 30px;
    padding: 50px 0;
    grid-template-columns: repeat(3, 1fr);
}
.item{
    background-color: rgb(250 250 250/1);
    padding: 40px;
    border-radius: var(--radius-lg);
}
.item h3{
    font-size: 2rem;
}
.img-wrap{
    background: var(--gradient);
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
    border-radius: 50px;
}


@media (max-width: 700px) {
    .feature-wrapper{
        grid-template-columns: 100%;
    }
    
}

</style>