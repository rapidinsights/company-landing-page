                </div>
                <div class="flex-center gap-1">
                    <a class="button button-primary" href="#contact">Book Free Call</a>
                </div>
                <ul class="gap-1 mt-2 flex-center grid-center hero-checklist">
                    {checklist.map(item => (
                        <li class="flex gap-0 align-center">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" width="20">
