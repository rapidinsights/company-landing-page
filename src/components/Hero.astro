<style>
#hero{
    background: var(--gradient);
    padding: 0px;
}

.hero-wrapper{
    margin: 0 auto;
    display: table;
    padding: 170px 0 40px 0;
}

.hero-content{
    display: table-cell;
    vertical-align: middle;
    text-align: center;
}
.text-container{
    text-align: center;
}



/* Hero:Showcase */

.main-image{
    box-shadow: var(--shadow);
}
#img-hero{
    border-radius: var(--radius-md);
}
.showcase-container{    
    height: 500px;
    overflow: hidden;
}


@media (max-width: 700px) {
    .hero-wrapper{
        padding: 150px 10px 40px 10px;
    }
    .hero-checklist{
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        text-align: center;
        gap: 0px;
    }
    .hero-checklist li span{
        font-size: 1.2rem;
    }

    .showcase-container{
        height: auto;
        padding: 0 10px;
    }
    .showcase-container img{
        transform: translateY(20px);
    }
    
}







.fade-in-up {
  animation: fadeInUp .7s  ease-in-out;
}

@keyframes fadeInUp {
  0% {
    opacity: 0;
    transform: translateY(30px);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}
  
</style>