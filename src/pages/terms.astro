---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Terms of Service - Rapid Insights">
	<main>
		<Header />
		<section class="legal-page">
			<div class="container">
				<div class="legal-content max-w-lg m-auto">
					<h1 class="text-xlg">Terms of Service</h1>
					<p class="text-sm last-updated">Last updated: January 11, 2025</p>

